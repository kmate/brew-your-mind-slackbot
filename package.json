{
  "name": "brew-your-mind-slackbot",
  "version": "0.1.0",
  "description": "Brew Your Mind Slack bot",
  "repository": {
    "type": "git",
    "url": "https://github.com/kmate/brew-your-mind-slackbot"
  },
  "scripts": {
    "build-ts": "tsc",
    "build": "npm run build-ts && npm run lint && npm run copy-static-assets",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve-debug": "env-cmd nodemon --inspect dist/server.js",
    "serve": "env-cmd node dist/server.js",
    "start": "npm run serve",
    "test": "jest --forceExit --coverage --verbose",
    "update": "npx npm-check-updates -u && npm install",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "env-cmd nodemon dist/server.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "keywords": [],
  "author": "Mate Karacsony",
  "license": "ISC",
  "dependencies": {
    "@slack/bolt": "^4.1.0",
    "axios": "^1.7.7",
    "cheerio": "^1.0.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.15.0",
    "@types/express": "5.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "8.15.0",
    "@typescript-eslint/parser": "8.15.0",
    "chai": "5.1.2",
    "concurrently": "^9.1.0",
    "env-cmd": "^10.1.0",
    "eslint": "9.15.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "npm-check-updates": "^17.1.11",
    "shelljs": "^0.8.5",
    "ts-jest": "^29.2.5",
    "ts-node": "10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.17.0"
  }
}
